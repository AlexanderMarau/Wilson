@model IEnumerable<Wilson.Web.Areas.Admin.Models.ControlPanelViewModels.UserViewModel>

<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <td>@user.PhoneNumber</td>
                <td>
                    <button class="btn btn-sm">
                        <a asp-area="Admin" asp-controller="ControlPanel" asp-action="EditUser" asp-route-id="@user.Id">Edit</a>
                    </button>
                    @if (user.IsActive)
                    {
                        <form asp-area="Admin" asp-controller="ControlPanel" asp-action="DeactivateUser" asp-route-id="@user.Id" method="post" class="form-horizontal" role="form">
                            <button type="submit" class="btn btn-sm"><a>Deactivate</a></button>
                        </form>
                    }
                    else
                    {
                        <form asp-area="Admin" asp-controller="ControlPanel" asp-action="ActivateUser" asp-route-id="@user.Id" method="post" class="form-horizontal" role="form">
                            <button type="submit" class="btn btn-sm"><a>Activate</a></button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>