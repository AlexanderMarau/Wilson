@model PayrollViewModel

<h4 class="text-info">Missing payrolls for the period</h4>
<form asp-area=@Constants.Areas.Accounting asp-controller="Home" asp-action=@nameof(HomeController.Payroll) method="post">
    @Html.AntiForgeryToken()
    <div asp-validation-summary="All" class="text-danger"></div>
    <h4 class="text-primary">Find Payrolls</h4>
    <hr />
    <div class="form-group">
        <label asp-for="EmployeeId" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="EmployeeId" class="form-control">
                <option value="">Select all</option>
                @foreach (var employee in Model.EmployeeOptions)
                {
                    <option value=@employee.Value>@employee.Text</option>
                }
            </select>
        </div>
    </div>
    <div class="form-group-sm">
        <label asp-for="From" class="col-md-6 control-label"></label>
        <div class="col-md-6">
            <input asp-for="From" class="form-control" type="date" />
        </div>
    </div>
    <div class="form-group-sm">
        <label asp-for="To" class="col-md-6 control-label"></label>
        <div class="col-md-6">
            <input asp-for="To" class="form-control" type="date" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Find</button>
        </div>
    </div>
</form>




